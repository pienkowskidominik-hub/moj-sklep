<script>
let cart = [];
let products = [
    {
        name:'Produkt 1',
        price:50,
        img:'images/produkt1.jpg',
        description:'Opis produktu 1',
        options: {
            baza:['Olejowa','Woskowa'],
            naczynie:['S≈Çoik','Butelka'],
            barwaDominujaca:['Czerwona','Zielona','Niebieska'],
            barwaDodatkowa:['≈ª√≥≈Çta','Bia≈Ça','Czarna'],
            dodatki:['Brokat','Kwiaty','Piasek'],
            zapach:['Wanilia','R√≥≈ºa','Lawenda'],
            waga:['100g','200g','300g']
        }
    },
    {
        name:'Produkt 2',
        price:80,
        img:'images/produkt2.jpg',
        description:'Opis produktu 2',
        options: {
            baza:['Olejowa','Woskowa'],
            naczynie:['S≈Çoik','Butelka'],
            barwaDominujaca:['Pomara≈Ñcz','Fiolet','Zielony'],
            barwaDodatkowa:['≈ª√≥≈Çta','Bia≈Ça','Czarna'],
            dodatki:['Brokat','Kwiaty','Piasek'],
            zapach:['Czekolada','Kawa','Miƒôta'],
            waga:['150g','250g','350g']
        }
    }
];

function showSection(sectionId){
    document.querySelectorAll('section').forEach(sec=>sec.classList.remove('active'));
    document.getElementById(sectionId).classList.add('active');
}

function showProductDetail(index){
    const p = products[index];
    showSection('product-detail');
    const detail = document.getElementById('product-detail');
    detail.innerHTML = `
        <div class="product-detail-container">
            <div class="product-detail-image">
                <img src="${p.img}" alt="${p.name}">
            </div>
            <div class="product-detail-info">
                <h3>${p.name} - ${p.price} z≈Ç</h3>
                <p>${p.description}</p>
                <div id="config-options">
                    <label>Baza:</label><select id="baza">${p.options.baza.map(o=>`<option>${o}</option>`).join('')}</select>
                    <label>Naczynie:</label><select id="naczynie">${p.options.naczynie.map(o=>`<option>${o}</option>`).join('')}</select>
                    <label>Barwa dominujƒÖca:</label><select id="barwaDominujaca">${p.options.barwaDominujaca.map(o=>`<option>${o}</option>`).join('')}</select>
                    <label>Barwa dodatkowa:</label><select id="barwaDodatkowa">${p.options.barwaDodatkowa.map(o=>`<option>${o}</option>`).join('')}</select>
                    <label>Dodatki:</label><select id="dodatki">${p.options.dodatki.map(o=>`<option>${o}</option>`).join('')}</select>
                    <label>Zapach:</label><select id="zapach">${p.options.zapach.map(o=>`<option>${o}</option>`).join('')}</select>
                    <label>Waga:</label><select id="waga">${p.options.waga.map(o=>`<option>${o}</option>`).join('')}</select>
                    <button onclick="addToCartMulti('${p.name}', ${p.price})">üõí Dodaj do koszyka</button>
                </div>
                <button id="show-config-btn" onclick="toggleConfig()">‚öôÔ∏è Konfiguruj produkt</button>
            </div>
        </div>
    `;
    document.getElementById('config-options').style.display = 'none';
}

function toggleConfig(){
    const config = document.getElementById('config-options');
    if(config.style.display==='none') config.style.display='flex';
    else config.style.display='none';
}

function addToCartMulti(name, price){
    const variant = {
        baza:document.getElementById('baza').value,
        naczynie:document.getElementById('naczynie').value,
        barwaDominujaca:document.getElementById('barwaDominujaca').value,
        barwaDodatkowa:document.getElementById('barwaDodatkowa').value,
        dodatki:document.getElementById('dodatki').value,
        zapach:document.getElementById('zapach').value,
        waga:document.getElementById('waga').value
    };
    cart.push({name, variant, price});
    updateCart();
    alert(name + " zosta≈Ç dodany do koszyka!");
}

function updateCart(){
    const list = document.getElementById('cart-list');
    list.innerHTML = '';
    let sum=0;
    cart.forEach((item,index)=>{
        sum+=item.price;
        const li = document.createElement('div');
        li.className='cart-item';
        li.innerHTML=`<p>${item.name} <small>(${Object.values(item.variant).join(', ')})</small></p><p>${item.price} z≈Ç</p>`;
        const btn=document.createElement('button');
        btn.textContent='Usu≈Ñ';
        btn.onclick=()=>{cart.splice(index,1); updateCart();};
        li.appendChild(btn);
        list.appendChild(li);
    });
    document.getElementById('cart-summary').textContent=`≈ÅƒÖcznie: ${sum} z≈Ç`;
}
</script>

